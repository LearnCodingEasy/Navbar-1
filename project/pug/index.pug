doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Navbar
    // Box Icons
    link(rel="stylesheet" href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css")
    link(rel="stylesheet" href="css/style.css")


  body 
    header(class="header" id="header")
      nav(class="nav container")
        // Logo 
        |
        | 
        a(href="#" class="nav-logo") Logo 
        // Menu 
        |
        |
        div(class="nav-menu" id="nav-menu")
          ul(class="nav-list")
            li(class="nav-item")
              a(href="#home" class="nav-link active-link") Home
            li(class="nav-item")
              a(href="#about" class="nav-link") About
            li(class="nav-item")
              a(href="#services" class="nav-link") Services
            li(class="nav-item")
              a(href="#team" class="nav-link") Team
            li(class="nav-item")
              a(href="#contact" class="nav-link") Contact
            li(class="nav-item")
              i( class="bx bx-moon change-theme" id="theme-button")
        // Toggle Theme 
        |
        |
        div(class="nav-toggle" id="nav-toggle")
          i(class="bx bx-menu")

    // Main 
    |
    |
    main(class="main") 
      div(class="container") 
        section(class="home" id="home") 
          h2(class="responsive_headline") Home
        section(class="about" id="about") 
          h2(class="responsive_headline") About
        section(class="services" id="services") 
          h2(class="responsive_headline") Services
        section(class="team" id="team") 
          h2(class="responsive_headline") Team 
        section(class="contact" id="contact") 
          h2(class="responsive_headline") Contact 

    // Footer
    |
    |
    footer(class="footer" id="footer")
      div(class="container")
        h2 Footer

    // Scroll Top
    |
    |
    a(href="#" class="scroll-top" id="scroll-top")
      i(class="bx bx-chevron-up scroll-top-icon")

    |
    |
    //- Go To Link
    //- https://scrollrevealjs.org/guide/hello-world.html
    // Scroll Reveal
    script(src="https://unpkg.com/scrollreveal")

    |
    |
    script(src="js/script.js")
